<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.navigation.DiagnosticFragment"
    android:padding="@dimen/dim_10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="@dimen/dim_30dp"
                app:cardBackgroundColor="@color/colorGrey6">

                <TextView
                    android:id="@+id/tvNuevoSintoma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/dim_12dp"
                    android:text="Paciente"
                    android:textColor="@color/colorBlack0" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorGrey6"
                android:layout_marginTop="@dimen/dim_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dim_12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Id"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/idPaciente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/nombrePaciente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="@dimen/dim_30dp"
                android:layout_marginTop="@dimen/dim_20dp"
                app:cardBackgroundColor="@color/colorGrey6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/dim_12dp"
                    android:text="Doctor"
                    android:textColor="@color/colorBlack0" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorGrey6"
                android:layout_marginTop="@dimen/dim_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/dim_12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Id"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/idDoctor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Nombre"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/nombreDoctor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Especialidad"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/especialidadDoctor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="@dimen/dim_30dp"
                android:layout_marginTop="@dimen/dim_20dp"
                app:cardBackgroundColor="@color/colorGrey6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/dim_12dp"
                    android:text="Diagnostico del MÃ©dico"
                    android:textColor="@color/colorBlack0" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dim_12dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorGrey6"
                android:layout_marginTop="@dimen/dim_6dp">

                <TextView
                    android:id="@+id/diagnostico"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_100dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dim_12dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</FrameLayout>