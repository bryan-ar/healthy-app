<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dim_6dp">

    <TextView
        android:id="@+id/tvSintoma"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Fiebre 39 grados"
        android:layout_marginStart="@dimen/dim_6dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHoraSintoma"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="30/04 07:00"
        android:textAlignment="textEnd"
        android:layout_marginEnd="@dimen/dim_6dp"
        android:layout_height="wrap_content"/>

</LinearLayout>