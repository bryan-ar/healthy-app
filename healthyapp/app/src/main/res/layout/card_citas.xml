<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="80"
            android:padding="@dimen/dim_15dp"
            android:background="@color/colorSkyBlue0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicina Interna"
                android:textColor="#eeeeee"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_noun_doctor_386892"
                    android:layout_marginTop="@dimen/dim_5dp"/>
                <TextView
                    android:id="@+id/tvNombreDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cornejo Barreda Felix Eduardo"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim_2dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_marginTop="@dimen/dim_5dp"/>
                <TextView
                    android:id="@+id/tvNombrePaciente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bryan Arenas Reyes"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim_2dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_videocam_24"
                    android:layout_marginTop="@dimen/dim_5dp"/>
                <TextView
                    android:id="@+id/tvLinkReunion"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:text="meet.google.com/grk-dghr-mdk"
                    android:autoLink="all"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dim_2dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="#00446A">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/tvMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABR"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tvDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="24sp"
                    android:layout_margin="@dimen/dim_2dp"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>